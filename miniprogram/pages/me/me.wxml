<view class="container">
  <!-- 个人信息部分 -->
  <view class="content">
    <view class="title">个人信息</view>

    <view class="info-group">
      <text class="label">姓名：</text>
      <text class="info">{{name}}</text>
    </view>

    <view class="info-group">
      <text class="label">身份证号：</text>
      <text class="info">{{idNumber}}</text>
    </view>

    <view class="info-group">
      <text class="label">性别：</text>
      <text class="info">{{gender}}</text>
    </view>

    <view class="info-group">
      <text class="label">年龄：</text>
      <text class="info">{{age}}</text>
    </view>

    <view class="info-group">
      <text class="label">学校/单位：</text>
      <text class="info">{{organization}}</text>
    </view>

    <view class="info-group">
      <text class="label">手机：</text>
      <text class="info">{{phone}}</text>
    </view>

    <view class="info-group">
      <text class="label">证件照：</text>
      <image class="photo-preview" src="{{photo}}" mode="aspectFit" wx:if="{{photo}}"/>
    </view>

    <!-- 已报名赛事部分 -->
    <view class="title">已报名赛事</view>

    <block wx:for="{{registeredCompetitions}}" wx:key="competitionName">
      <view class="info-group">
        <text class="label">赛事：</text>
        <text class="info">{{item.competitionName}} - {{item.group}} - {{item.role}}</text>
      </view>
    </block>
  </view>

  <!-- 修改信息按钮 -->
  <button class="edit-btn" bindtap="onEdit">修改信息</button>
</view>
