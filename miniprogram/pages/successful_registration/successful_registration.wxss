/* 页面整体布局 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f0f8ff;
  min-height: 100vh;
}

/* 标题容器 */
.title-wrapper {
  margin-bottom: 20px;
}

/* 标题样式 */
.title {
  font-family: "Hiragino Sans GB", "Arial", sans-serif;
  font-size: 32px;
  font-weight: bold;
  background: linear-gradient(90deg, #3a8dff, #005bac);
  color: transparent;
  background-clip: text;
  -webkit-background-clip: text;
  text-align: center;
  animation: fadeInUp 1.5s ease-in-out forwards;
  letter-spacing: 2px;
}

/* 信息展示容器 */
.info-container {
  width: 80%;
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 20px;
  margin-bottom: 20px;
}

/* 每个信息组的布局 */
.info-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
}

/* 标签文本 */
.label {
  font-size: 18px;
  color: #666;
  font-weight: bold;
}

/* 信息文本 */
.info {
  font-size: 18px;
  color: #333;
  text-align: right;
}

/* 返回按钮样式 */
.back-btn {
  width: 80%;
  padding: 12px;
  background-color: #005bac;
  color: white;
  font-size: 18px;
  text-align: center;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin-top: 20px;
}