/* 页面整体布局 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f0f8ff;  /* 柔和的浅蓝背景 */
  text-align: center;
  position: relative;
}

/* LOGO容器，包含LOGO和背景 */
.logo-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}

/* LOGO 样式 */
.logo {
  width: 180px;
  height: 180px;
  border-radius: 50%;
  object-fit: cover;
  position: relative;
  z-index: 2;
}

/* 背景圆形装饰 */
.circle-background {
  position: absolute;
  width: 220px;
  height: 220px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  z-index: 1;
  box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.15);
}

/* 动态分割线的容器 */
.divider-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 2px;
  overflow: hidden;
  margin: 20px 0;
}

/* 动态分割线样式 */
.divider {
  width: 0%;
  height: 2px;
  background: linear-gradient(to right, #ffffff, #005bac);
  animation: expandDivider 2s ease-in-out forwards;  /* 动态延展动画 */
}

/* 标题样式 */
.title {
  font-family: "Hiragino Sans GB", "泓杰文体", sans-serif;
  font-size: 26px;
  color: #333333;
  margin-top: 10px;
  opacity: 0;
  animation: fadeIn 1.5s ease-in-out forwards;
}

/* 动态延展分割线动画 */
@keyframes expandDivider {
  0% {
    width: 0%;
  }
  100% {
    width: 100%;  /* 分割线从0延展到100% */
  }
}

/* 标题淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
